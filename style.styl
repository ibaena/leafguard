//Body Styles

body {
  width: 100%;
  height: 100%;
  background-image: url('../assets/background.jpg');
  background-size: cover;

}

#white-section{
  background-color: white;
  margin: auto;

}

//Header Styles
.page-header{
  text-align: center;
}

//Video Styles

iframe{
  box-shadow: 2px 4px 4px 2px grey;
}
@media only screen and (max-width: 500px) {
  iframe{
    width: 100%;
    height: auto;
  }
}

//Content Block Styles
#content-block{
  margin-top: 30px;
}
img.img-responsive{
  display: block;
  margin: 0 auto;
  }
@media only screen and (max-width: 500px) {
  img.img-responsive{
    display: block;
    margin: 0 auto;
    width: 100%
    float: none !important;
  }
  .content-body{
    display: inline-block;
  }
}

/* Gradient transparent - color - transparent */

hr.style-two {
    border: 0;
    height: 1px;
    background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
}

//Contact Styles

#contact-title{
  text-align: center;
  padding-left: 50px;
  margin-bottom: 30px;
}

p#disclaimer{
  margin-left: 100px;
  text-align: center;
}

@media only screen and (max-width: 500px) {
  p#disclaimer{
    margin-left: 0;
    text-align: center;
  }
  .right-pic{
    float: none;
    }
  #contact-title{
    text-align: center;
    padding-left: 0;
    margin-bottom: 0;
  }
}

//Footer Styles

footer{
  background-color: #165a3d;
  height: 40px;
  text-align: center;
  color: white;
  margin-top: 20px;
    p{
      margin-top: 8px;
    }
}

//Seals Styles

.seals{
  .sealImgs{
    display: block;
    margin: 0 auto;
    margin-bottom: 20px;
  }
}


#seals-title{
  text-align: center;
  margin-bottom: 30px;
  #seals-text{
    font-size: 30px;
  }
}
